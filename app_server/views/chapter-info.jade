extends layout

block content
  #banner.page-header
    .row
      .col-lg-12
        h1= title
        p #{description}
  .row
    each model in models
      div(class='col-xs-12 col-sm-4 list-group-item chapter-colour-#{model.colour}')
        h4 
          a(href='#{model.url}') #{model.title}
        p= model.description