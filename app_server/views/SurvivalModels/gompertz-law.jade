extend ../formula-content

block view
    .col-sm-6.col-xs-12
        form.form-horizontal(action='',method='POST',id='gompertz', role="form", type="application/json")
            each arg in queryParms
                - var val = (arg.value === null ? arg.default : arg.value)
                div.form-group
                    label(class='control-label', for="#{arg.id}" ) #{arg.name}:
                    input.form-control.input-sm(type='text', id="#{arg.id}", name="#{arg.id}", value="#{val}")
            div.form-group
                button(type='submit',class='btn btn-success') Calculate
    .col-sm-6.col-xs-12(ng-controller="gompertzResults")
        if '' == ''   
            div#chart-placeholder Chart will be here     
            
            p {{results.data.age}}
              p(ng-repeat="item in results.data.SurvivalData") {{item.t}} = {{item.mortality}}
            
        else
            p= results.error           
